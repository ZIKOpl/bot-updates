<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Bot Updates â€” Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>
  <style>
    * { box-sizing: border-box }
    body {
      font-family: Inter, system-ui, sans-serif;
      background: #0e1117;
      color: #e5e7eb;
      margin: 0;
      min-height: 100vh;
    }
    .wrap {
      max-width: 1000px;
      margin: 40px auto;
      padding: 0 20px;
    }
    h2, h3 { margin-top: 0 }
    .btn {
      background: #5865f2;
      border: none;
      color: white;
      padding: 10px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: .2s;
    }
    .btn:hover { opacity: .9 }
    .card {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 18px;
      margin-bottom: 20px;
      box-shadow: 0 4px 14px rgba(0,0,0,.3);
    }
    .input {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 10px;
      color: #e5e7eb;
      width: 100%;
      font-size: 15px;
    }
    .drop {
      border: 2px dashed #3b82f6;
      background: rgba(59,130,246,.08);
      border-radius: 10px;
      padding: 25px;
      text-align: center;
      transition: .2s;
      margin-top: 10px;
    }
    .drop.drag { background: rgba(59,130,246,.18); border-color: #60a5fa; }
    .drop.error { background: rgba(239,68,68,.1); border-color: #ef4444; }
    .drop.ok { background: rgba(34,197,94,.1); border-color: #22c55e; }
    .muted { color: #9ca3af; font-size: 14px; margin-top: 6px; }
    ul { list-style: none; padding-left: 0 }
    li { margin: 6px 0; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <h2>ðŸ“¦ Publier une mise Ã  jour</h2>
      <p class="muted">ConnectÃ© en tant que <b><%= user?.username %>#<%= user?.discriminator %></b></p>

      <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data" novalidate>
        <label for="ver">Version :</label>
        <input id="ver" class="input" name="version" placeholder="ex: v2.3 ou 2.3" required/>

        <div id="drop" class="drop">
          <strong>Glisser-dÃ©poser</strong> ton <code>.zip</code> ici ou <u>clique</u> pour le choisir
          <input id="file" type="file" name="zip" accept=".zip" style="display:none" required/>
          <div id="fileName" class="muted">Aucun fichier sÃ©lectionnÃ©.</div>
        </div>

        <button class="btn" type="submit" style="margin-top:15px;width:100%">ðŸ“¤ Publier</button>
      </form>
    </div>

    <div class="card">
      <h3>ðŸ“Š Statistiques</h3>
      <p>Total de bots connus : <%= totalBots %></p>
      <p>Ã€ jour : <%= upToDate %> â€” ObsolÃ¨tes : <%= outdated %></p>

      <h3>ðŸ“œ Releases</h3>
      <% if (releases.length) { %>
        <ul>
          <% releases.forEach(r => { %>
            <li><b><%= r.version %></b> â€” <%= new Date(r.createdAt).toLocaleString('fr-FR') %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="muted">Aucune release publiÃ©e.</p>
      <% } %>
    </div>
  </div>

  <script>
    const drop = document.getElementById('drop');
    const fileInput = document.getElementById('file');
    const fileName = document.getElementById('fileName');
    const versionInput = document.getElementById('ver');
    const form = document.getElementById('uploadForm');

    let chosenFile = null;

    function resetState() {
      drop.classList.remove('drag', 'error', 'ok');
    }

    function showError(msg) {
      drop.classList.add('error');
      fileName.textContent = msg;
    }

    function showOk(msg) {
      drop.classList.add('ok');
      fileName.textContent = msg;
    }

    drop.addEventListener('click', () => fileInput.click());

    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(ev => {
      drop.addEventListener(ev, e => {
        e.preventDefault();
        e.stopPropagation();
      });
    });

    drop.addEventListener('dragenter', () => drop.classList.add('drag'));
    drop.addEventListener('dragleave', () => resetState());

    drop.addEventListener('drop', e => {
      resetState();
      const file = e.dataTransfer.files[0];
      if (!file) return showError("Aucun fichier dÃ©tectÃ©.");
      if (!file.name.endsWith('.zip')) return showError("Format invalide. ZIP requis.");
      chosenFile = file;
      showOk(file.name);
      fileInput.files = e.dataTransfer.files;
    });

    fileInput.addEventListener('change', () => {
      const file = fileInput.files[0];
      if (!file) return;
      if (!file.name.endsWith('.zip')) return showError("Format invalide. ZIP requis.");
      chosenFile = file;
      showOk(file.name);
    });

    form.addEventListener('submit', e => {
      if (!chosenFile && !fileInput.files.length) {
        e.preventDefault();
        return showError("Merci de choisir un fichier ZIP.");
      }
      if (!versionInput.value.trim()) {
        e.preventDefault();
        return showError("Entre une version avant dâ€™envoyer.");
      }
      if (!/^v/i.test(versionInput.value.trim())) {
        versionInput.value = "v" + versionInput.value.trim();
      }
    });
  </script>
</body>
</html>
