<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>Dashboard ‚Ä¢ HOME UPDATE</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <!-- NAV -->
  <nav class="nav">
    <div class="brand">
      <img src="/logo.png" alt="HOME UPDATE" class="nav-logo" />
      <span class="brand-text">HOME UPDATE</span>
    </div>
    <div class="nav-right">
      <a class="btn" href="/">Accueil</a>
      <a class="btn" href="/owner/bots">Mes Bots</a>
      <a class="btn" href="/trash">Corbeille</a>
      <a class="btn danger" href="/logout">D√©connexion</a>
    </div>
  </nav>

  <main class="container">
    <header class="hero">
      <h1>Panneau de gestion</h1>
      <p>Glisse la nouvelle version, ajoute des notes et publie.</p>
      <div style="margin-top:14px; display:flex; gap:10px; justify-content:center; flex-wrap:wrap;">
        <span class="version-pill">Version active : <strong><%= latest %></strong></span>
        <a class="btn primary" href="/download/latest">‚¨á T√©l√©charger la derni√®re version</a>
      </div>
    </header>

    <section class="dashboard-flex">
      <!-- Upload -->
      <div class="card upload-card card-tilt">
        <h2>üì• Nouvelle release</h2>
        <form id="uploadForm" class="upload-form" action="/upload" method="post" enctype="multipart/form-data">
          <input class="input" type="text" name="version" placeholder="Num√©ro de version (ex : 2.6)" required />
          <textarea class="input textarea" name="notes" rows="3" placeholder="Notes de version (changements, corrections‚Ä¶)"></textarea>
          <div id="dropZone" class="drop-zone">
            <span id="uploadText">Glisse ton fichier .zip ici ou clique pour le choisir</span>
            <input id="fileInput" type="file" name="zip" accept=".zip" hidden />
          </div>
          <button type="submit" class="btn primary">Uploader</button>
        </form>
      </div>

      <!-- Liste versions -->
      <div class="card timeline-card card-tilt">
        <h2>üïí Versions pr√©c√©dentes</h2>
        <% if (releases.length === 0) { %>
          <p class="muted">Aucune release disponible</p>
        <% } else { %>
          <ul class="release-list2">
            <% releases.forEach(r => { %>
              <li class="release-row" data-version="<%= r.version %>">
                <div class="release-left">
                  <div class="release-dot"><%= r.version %></div>
                  <div class="release-meta">
                    <div class="release-title"><%= r.version %></div>
                    <div class="muted"><%= new Date(r.createdAt).toLocaleString("fr-FR",{dateStyle:"medium",timeStyle:"short"}) %></div>
                    <% if (r.notes) { %>
                      <div class="muted" style="margin-top:6px"><%= r.notes %></div>
                    <% } %>
                  </div>
                </div>
                <div class="release-actions">
                  <button class="icon-btn more-btn" aria-label="menu" data-version="<%= r.version %>">‚ãÆ</button>
                  <div class="menu hidden" id="menu-<%= r.version %>">
                    <a class="menu-item" href="/download/<%= r.version %>">‚¨á T√©l√©charger cette version</a>
                    <button class="menu-item revert" data-version="<%= r.version %>">üîÅ Revenir sur cette version</button>
                    <form action="/delete/<%= r.version %>" method="post" style="margin:0;">
                      <button type="submit" class="menu-item danger">üóëÔ∏è Envoyer √† la corbeille</button>
                    </form>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </section>
  </main>

  <footer class="footer">
    ¬© <%= new Date().getFullYear() %> ‚Äî HOME UPDATE Panel ¬∑
    <a href="<%= support %>" target="_blank" rel="noopener">Discord</a>
  </footer>

  <script>
    // Drag & Drop
    const drop = document.getElementById('dropZone');
    const input = document.getElementById('fileInput');
    const text = document.getElementById('uploadText');
    const form = document.getElementById('uploadForm');

    if (drop && input && text && form) {
      drop.addEventListener('click', () => input.click());
      drop.addEventListener('dragover', e => { e.preventDefault(); drop.classList.add('hover'); });
      drop.addEventListener('dragleave', () => drop.classList.remove('hover'));
      drop.addEventListener('drop', e => {
        e.preventDefault(); drop.classList.remove('hover');
        if (e.dataTransfer.files.length) {
          input.files = e.dataTransfer.files;
          text.textContent = 'Fichier s√©lectionn√© : ' + e.dataTransfer.files[0].name;
        }
      });
      input.addEventListener('change', () => {
        if (input.files.length) text.textContent = 'Fichier s√©lectionn√© : ' + input.files[0].name;
      });
      form.addEventListener('submit', () => { text.textContent = 'Upload en cours‚Ä¶'; });
    }

    // Menus ‚ãÆ
    document.querySelectorAll('.more-btn').forEach(btn => {
      btn.addEventListener('click', e => {
        e.stopPropagation();
        const v = btn.dataset.version;
        const menu = document.getElementById('menu-' + v);
        document.querySelectorAll('.menu').forEach(m => m.classList.add('hidden'));
        if (menu) menu.classList.toggle('hidden');
      });
    });

    window.addEventListener('click', () => {
      document.querySelectorAll('.menu').forEach(m => m.classList.add('hidden'));
    });

    // Boutons "Revenir sur cette version"
    document.querySelectorAll('.revert').forEach(btn => {
      btn.addEventListener('click', async e => {
        e.stopPropagation();
        const v = btn.dataset.version;
        if (!confirm(`Revenir √† la version ${v} ?`)) return;

        try {
          const res = await fetch(`/revert/${encodeURIComponent(v)}`, {
            method: 'POST'
          });
          if (res.ok) {
            alert('Version d√©finie comme active ‚úî');
            window.location.reload();
          } else {
            alert("Erreur lors du revert ‚ùå");
          }
        } catch (err) {
          alert("Erreur r√©seau lors du revert ‚ùå");
        }
      });
    });
  </script>
</body>
</html>
