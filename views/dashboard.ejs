<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>DASHBOARD • HOME UPDATE</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/style.css" />
</head>
<body class="dash">
  <!-- SIDEBAR -->
  <aside class="sidebar">
    <div class="sidebar-brand">
      <img src="/logo.png" alt="HOME UPDATE" class="sidebar-logo" />
      <span>HOME UPDATE</span>
    </div>
    <nav class="sidebar-nav">
      <a href="/dashboard" class="active">RELEASES</a>
      <a href="/owner/bots">MES BOTS</a>
      <a href="/trash">CORBEILLE</a>
      <a href="/">ACCUEIL</a>
    </nav>
    <div class="sidebar-bottom">
      <a href="/logout" class="danger">DÉCONNEXION</a>
    </div>
  </aside>

  <!-- CONTENU -->
  <main class="dash-content">
    <header class="page-header">
      <h1>RELEASES</h1>
      <p>UPLOADER, GÉRER ET RESTAURER LES VERSIONS DU BOT.</p>
      <div style="margin-top:10px;">
        <span class="version-pill">VERSION ACTIVE : <strong><%= latest %></strong></span>
      </div>
    </header>

    <div class="top-actions">
      <a class="btn primary" href="/download/latest">TÉLÉCHARGER LA DERNIÈRE VERSION</a>
    </div>

    <section class="dashboard-flex">
      <!-- Upload -->
      <div class="card upload-card">
        <h2>NOUVELLE RELEASE</h2>
        <form id="uploadForm" class="upload-form" action="/upload" method="post" enctype="multipart/form-data">
          <input class="input" type="text" name="version" placeholder="Numéro de version (ex : 2.6)" required />
          <textarea class="input textarea" name="notes" rows="3" placeholder="Notes de version (changements, corrections…)"></textarea>
          <div id="dropZone" class="drop-zone">
            <span id="uploadText">GLISSE UN FICHIER .ZIP OU CLIQUE POUR LE SÉLECTIONNER</span>
            <input id="fileInput" type="file" name="zip" accept=".zip" hidden />
          </div>
          <button type="submit" class="btn primary">UPLOADER</button>
        </form>
      </div>

      <!-- Liste versions -->
      <div class="card timeline-card">
        <h2>HISTORIQUE DES VERSIONS</h2>
        <% if (releases.length === 0) { %>
          <p class="muted">Aucune release disponible.</p>
        <% } else { %>
          <ul class="release-list2">
            <% releases.forEach(r => { %>
              <li class="release-row" data-version="<%= r.version %>">
                <div class="release-left">
                  <div class="release-dot"><%= r.version %></div>
                  <div class="release-meta">
                    <div class="release-title"><%= r.version %></div>
                    <div class="muted">
                      <%= new Date(r.createdAt).toLocaleString("fr-FR",{dateStyle:"medium",timeStyle:"short"}) %>
                    </div>
                    <% if (r.notes) { %>
                      <div class="muted" style="margin-top:6px"><%= r.notes %></div>
                    <% } %>
                  </div>
                </div>
                <div class="release-actions">
                  <button class="icon-btn more-btn" aria-label="menu" data-version="<%= r.version %>">⋮</button>
                  <div class="menu hidden" id="menu-<%= r.version %>">
                    <a class="menu-item" href="/download/<%= encodeURIComponent(r.version) %>">
                      TÉLÉCHARGER
                    </a>
                    <form action="/revert/<%= encodeURIComponent(r.version) %>" method="post" style="margin:0;">
                      <button type="submit" class="menu-item">
                        DÉFINIR COMME VERSION ACTIVE
                      </button>
                    </form>
                    <form action="/delete/<%= encodeURIComponent(r.version) %>" method="post" style="margin:0;"
                          onsubmit="return confirm('Envoyer cette release dans la corbeille ?');">
                      <button type="submit" class="menu-item danger">
                        ENVOYER DANS LA CORBEILLE
                      </button>
                    </form>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </section>
  </main>

  <footer class="footer">
    © <%= new Date().getFullYear() %> — HOME UPDATE PANEL ·
    <a href="<%= support %>" target="_blank" rel="noopener">DISCORD SUPPORT</a>
  </footer>

  <script>
    // Drag & Drop
    const drop = document.getElementById('dropZone');
    const input = document.getElementById('fileInput');
    const text = document.getElementById('uploadText');
    const form = document.getElementById('uploadForm');

    if (drop && input && text && form) {
      drop.addEventListener('click', () => input.click());
      drop.addEventListener('dragover', e => { e.preventDefault(); drop.classList.add('hover'); });
      drop.addEventListener('dragleave', () => drop.classList.remove('hover'));
      drop.addEventListener('drop', e => {
        e.preventDefault(); drop.classList.remove('hover');
        if (e.dataTransfer.files.length) {
          input.files = e.dataTransfer.files;
          text.textContent = 'FICHIER SÉLECTIONNÉ : ' + e.dataTransfer.files[0].name;
        }
      });
      input.addEventListener('change', () => {
        if (input.files.length) text.textContent = 'FICHIER SÉLECTIONNÉ : ' + input.files[0].name;
      });
      form.addEventListener('submit', () => { text.textContent = 'UPLOAD EN COURS…'; });
    }

    // Menus ⋮
    document.querySelectorAll('.more-btn').forEach(btn => {
      btn.addEventListener('click', e => {
        e.stopPropagation();
        const v = btn.dataset.version;
        const menu = document.getElementById('menu-' + v);
        document.querySelectorAll('.menu').forEach(m => m.classList.add('hidden'));
        if (menu) menu.classList.toggle('hidden');
      });
    });

    window.addEventListener('click', () => {
      document.querySelectorAll('.menu').forEach(m => m.classList.add('hidden'));
    });
  </script>
</body>
</html>
